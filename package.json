  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "bs-jest": "^0.3.2",
    "bs-platform": "^3.1.5",
