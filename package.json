{
  "name": "reason-form",
  "private": false,
  "version": "0.4.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest lib/js",
    "test:watch": "jest lib/js/src/__tests__ --watchAll",
    "start:reason": "bsb -make-world -w",
    "start:webpack": "webpack -w",
    "start": "yarn run build && concurrently --kill-others --names \"Reason,Webpack\" \"yarn run start:reason\" \"yarn run start:webpack\"",
    "build:reason": "bsb -make-world",
    "build:webpack": "webpack",
    "build": "yarn run build:reason && yarn run build:webpack",
    "clean": "bsb -clean-world && rm -Rfv build/* public/build/*",
    "refmt": "bsrefmt -w 120 --in-place $(find src -name '*.re') $(find src -name '*.rei')",
    "prepare": "install-self-peers -- --ignore-scripts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules"
    ]
  },
  "devDependencies": {
    "@team-griffin/install-self-peers": "^1.1.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "bs-jest": "^0.3.2",
    "bs-platform": "^4.0.5",
    "concurrently": "^4.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "reason-react": "^0.5.3"
  }
}
